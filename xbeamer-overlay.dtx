\NewDocumentCommand \temporal { D <> { all } +m +m +m }
  {
    \@@_overlay:nTF {#1}
      {#3}
      {
        \bool_if:NTF \g_@@_slide_continue_bool
          {#4}
          {#2}
      }
  }

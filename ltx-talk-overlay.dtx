%   be collected up verbatim and must use a box).
%    \begin{macrocode}
\RenewDocumentCommand \only { D <> { all } +m }
  {
    \@@_if_overlay:nT {#1}
      {#2}
  }
%    \end{macrocode}
% \end{macro}
